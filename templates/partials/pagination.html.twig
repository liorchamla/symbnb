<div class="d-flex justify-content-center mt-2">
    <ul class="pagination">
        <li class="page-item {% if page == 1 %} disabled {% endif %}">
        <a class="page-link" href="{{path(route, routeParams|merge({'page': page - 1}))}}">&laquo;</a>
        </li>
        {% for i in 1..pages %}
        <li class="page-item {% if i == page %} active {% endif %}">
        <a class="page-link" href="{{ path(route, routeParams|merge({'page': i})) }}">{{i}}</a>
        </li>
        {% endfor %}
        <li class="page-item {% if page == pages %} disabled {% endif %}">
            <a class="page-link" href="{{path(route, routeParams|merge({'page': page + 1}))}}">&raquo;</a>
        </li>
    </ul>
</div>